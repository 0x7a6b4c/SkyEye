{
  "PolicyName": "AWSIoTRuleActions",
  "PolicyArn": "arn:aws:iam::aws:policy/service-role/AWSIoTRuleActions",
  "DefaultVersionId": "v2",
  "Statement": {
    "Effect": "Allow",
    "Action": [
      "dynamodb:PutItem",
      "kinesis:PutRecord",
      "iot:Publish",
      "s3:PutObject",
      "sns:Publish",
      "sqs:SendMessage*",
      "cloudwatch:SetAlarmState",
      "cloudwatch:PutMetricData",
      "es:ESHttpPut",
      "firehose:PutRecord"
    ],
    "Resource": "*"
  }
}