{
  "PolicyName": "ComprehendFullAccess",
  "PolicyArn": "arn:aws:iam::aws:policy/ComprehendFullAccess",
  "DefaultVersionId": "v2",
  "Statement": [
    {
      "Action": [
        "comprehend:*",
        "s3:ListAllMyBuckets",
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "iam:ListRoles",
        "iam:GetRole"
      ],
      "Effect": "Allow",
      "Resource": "*"
    }
  ]
}