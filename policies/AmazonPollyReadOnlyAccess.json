{
  "PolicyName": "AmazonPollyReadOnlyAccess",
  "PolicyArn": "arn:aws:iam::aws:policy/AmazonPollyReadOnlyAccess",
  "DefaultVersionId": "v2",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "polly:DescribeVoices",
        "polly:GetLexicon",
        "polly:GetSpeechSynthesisTask",
        "polly:ListLexicons",
        "polly:ListSpeechSynthesisTasks",
        "polly:SynthesizeSpeech"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
}